{
  "private": true,
  "devDependencies": {
    "browserify": ">=10.2.0",
    "watchify": ">=3.2.1",
    "reactify": ">=1.1.1",
    "react": ">=0.13.3"
  },
  "browserify": {
    "transform": [
      ["reactify"]
    ]
  },
  "scripts": {
    "prepublish": "npm run build",
    "start": "npm run build; python -m SimpleHTTPServer",
    "build": "browserify main.js -o bundle.js",
    "watch": "watchify main.js -o bundle.js --debug --verbose"
  }
}